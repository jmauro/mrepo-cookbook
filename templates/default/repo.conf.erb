[<%= @name %>]
name = <%= @repotitle %>
release = <%= @release %>
<% if defined?(@arch) -%>
arch = <%= @arch %>
<% end -%>
<% if defined?(@metadata) -%>
metadata = <%= if metadata.is_a? Array; then metadata.join(' '); else metadata; end %>
<% end -%>
<% unless iso.empty? -%>
iso = <%= iso %>
<% end -%>
<% urls.keys.sort.each do |name| -%>
<%= name %> = <%= urls[name] %>
<% end -%>
